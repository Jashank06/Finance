import { useState, useEffect } from 'react';
import axios from 'axios';
import { FiMail, FiUser, FiCalendar, FiTrash2, FiEye, FiCheckCircle } from 'react-icons/fi';
import './AdminPages.css';

const API_URL = import.meta.env.VITE_API_URL || 'http://localhost:10000';

const ContactMessages = () => {
    const [messages, setMessages] = useState([]);
    const [loading, setLoading] = useState(true);
    const [filter, setFilter] = useState('all');
    const [stats, setStats] = useState({ total: 0, unread: 0, read: 0, replied: 0 });

    useEffect(() => {
        fetchMessages();
        fetchStats();
    }, [filter]);

    const fetchMessages = async () => {
        try {
            const token = localStorage.getItem('token');
            const statusParam = filter !== 'all' ? `?status=${filter}` : '';
            const response = await axios.get(`${API_URL}/contact-messages${statusParam}`, {
                headers: { Authorization: `Bearer ${token}` }
            });
            setMessages(response.data.messages || []);
            setLoading(false);
        } catch (error) {
            console.error('Error fetching messages:', error);
            setLoading(false);
        }
    };

    const fetchStats = async () => {
        try {
            const token = localStorage.getItem('token');
            const response = await axios.get(`${API_URL}/contact-messages/stats/overview`, {
                headers: { Authorization: `Bearer ${token}` }
            });
            setStats(response.data);
        } catch (error) {
            console.error('Error fetching stats:', error);
        }
    };

    const handleStatusChange = async (id, status) => {
        try {
            const token = localStorage.getItem('token');
            await axios.patch(`${API_URL}/contact-messages/${id}/status`, 
                { status },
                { headers: { Authorization: `Bearer ${token}` } }
            );
            fetchMessages();
            fetchStats();
        } catch (error) {
            console.error('Error updating status:', error);
            alert('Error updating message status');
        }
    };

    const handleDelete = async (id) => {
        if (!window.confirm('Are you sure you want to delete this message?')) return;

        try {
            const token = localStorage.getItem('token');
            await axios.delete(`${API_URL}/contact-messages/${id}`, {
                headers: { Authorization: `Bearer ${token}` }
            });
            fetchMessages();
            fetchStats();
            setSelectedMessage(null);
        } catch (error) {
            console.error('Error deleting message:', error);
            alert('Error deleting message');
        }
    };

    const formatDate = (dateString) => {
        return new Date(dateString).toLocaleString('en-US', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
        });
    };

    const getStatusBadge = (status) => {
        const styles = {
            unread: { bg: '#ef4444', text: 'Unread' },
            read: { bg: '#f59e0b', text: 'Read' },
            replied: { bg: '#10b981', text: 'Replied' }
        };
        const style = styles[status] || styles.unread;
        return (
            <span style={{
                padding: '0.25rem 0.75rem',
                borderRadius: '12px',
                fontSize: '0.75rem',
                fontWeight: '600',
                background: style.bg,
                color: 'white'
            }}>
                {style.text}
            </span>
        );
    };

    if (loading) {
        return <div className="admin-loading">Loading contact messages...</div>;
    }

    return (
        <div className="admin-page">
            <div className="admin-header">
                <div>
                    <h1>Contact Messages</h1>
                    <p>Manage and respond to customer inquiries</p>
                </div>
            </div>

            {/* Stats Cards */}
            <div style={{ display: 'grid', gridTemplateColumns: 'repeat(auto-fit, minmax(200px, 1fr))', gap: '1rem', marginBottom: '2rem' }}>
                <div style={{ background: 'white', padding: '1.5rem', borderRadius: '12px', boxShadow: '0 2px 8px rgba(0,0,0,0.1)' }}>
                    <div style={{ fontSize: '2rem', fontWeight: 'bold', color: '#1f2937' }}>{stats.total}</div>
                    <div style={{ color: '#6b7280', marginTop: '0.5rem' }}>Total Messages</div>
                </div>
                <div style={{ background: 'white', padding: '1.5rem', borderRadius: '12px', boxShadow: '0 2px 8px rgba(0,0,0,0.1)' }}>
                    <div style={{ fontSize: '2rem', fontWeight: 'bold', color: '#ef4444' }}>{stats.unread}</div>
                    <div style={{ color: '#6b7280', marginTop: '0.5rem' }}>Unread</div>
                </div>
                <div style={{ background: 'white', padding: '1.5rem', borderRadius: '12px', boxShadow: '0 2px 8px rgba(0,0,0,0.1)' }}>
                    <div style={{ fontSize: '2rem', fontWeight: 'bold', color: '#f59e0b' }}>{stats.read}</div>
                    <div style={{ color: '#6b7280', marginTop: '0.5rem' }}>Read</div>
                </div>
                <div style={{ background: 'white', padding: '1.5rem', borderRadius: '12px', boxShadow: '0 2px 8px rgba(0,0,0,0.1)' }}>
                    <div style={{ fontSize: '2rem', fontWeight: 'bold', color: '#10b981' }}>{stats.replied}</div>
                    <div style={{ color: '#6b7280', marginTop: '0.5rem' }}>Replied</div>
                </div>
            </div>

            {/* Filters */}
            <div style={{ marginBottom: '1.5rem', display: 'flex', gap: '0.75rem' }}>
                {['all', 'unread', 'read', 'replied'].map((status) => (
                    <button
                        key={status}
                        onClick={() => setFilter(status)}
                        style={{
                            padding: '0.5rem 1rem',
                            borderRadius: '8px',
                            border: 'none',
                            background: filter === status ? '#1f2937' : '#f3f4f6',
                            color: filter === status ? 'white' : '#6b7280',
                            fontWeight: '500',
                            cursor: 'pointer',
                            textTransform: 'capitalize'
                        }}
                    >
                        {status}
                    </button>
                ))}
            </div>

            {/* Messages Table - Excel Style */}
            <div style={{ background: 'white', borderRadius: '12px', overflow: 'hidden', boxShadow: '0 2px 8px rgba(0,0,0,0.1)' }}>
                {messages.length === 0 ? (
                    <div style={{ padding: '3rem', textAlign: 'center', color: '#6b7280' }}>
                        No messages found
                    </div>
                ) : (
                    <div style={{ overflowX: 'auto' }}>
                        <table style={{ width: '100%', borderCollapse: 'collapse' }}>
                            <thead>
                                <tr style={{ background: '#f3f4f6', borderBottom: '2px solid #e5e7eb' }}>
                                    <th style={{ padding: '0.75rem 1rem', textAlign: 'left', fontWeight: '600', color: '#374151', fontSize: '0.875rem' }}>Name</th>
                                    <th style={{ padding: '0.75rem 1rem', textAlign: 'left', fontWeight: '600', color: '#374151', fontSize: '0.875rem' }}>Email</th>
                                    <th style={{ padding: '0.75rem 1rem', textAlign: 'left', fontWeight: '600', color: '#374151', fontSize: '0.875rem' }}>Subject</th>
                                    <th style={{ padding: '0.75rem 1rem', textAlign: 'left', fontWeight: '600', color: '#374151', fontSize: '0.875rem', minWidth: '300px' }}>Message</th>
                                    <th style={{ padding: '0.75rem 1rem', textAlign: 'center', fontWeight: '600', color: '#374151', fontSize: '0.875rem' }}>Status</th>
                                    <th style={{ padding: '0.75rem 1rem', textAlign: 'left', fontWeight: '600', color: '#374151', fontSize: '0.875rem' }}>Date</th>
                                    <th style={{ padding: '0.75rem 1rem', textAlign: 'center', fontWeight: '600', color: '#374151', fontSize: '0.875rem' }}>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {messages.map((message, index) => (
                                    <tr 
                                        key={message._id}
                                        style={{
                                            borderBottom: '1px solid #f3f4f6'
                                        }}
                                    >
                                        <td style={{ padding: '0.75rem 1rem', fontSize: '0.875rem', color: '#1f2937' }}>
                                            {message.name}
                                        </td>
                                        <td style={{ padding: '0.75rem 1rem', fontSize: '0.875rem', color: '#1f2937' }}>
                                            {message.email}
                                        </td>
                                        <td style={{ padding: '0.75rem 1rem', fontSize: '0.875rem', color: '#1f2937' }}>
                                            {message.subject}
                                        </td>
                                        <td style={{ padding: '0.75rem 1rem', fontSize: '0.875rem', color: '#1f2937', lineHeight: '1.5' }}>
                                            {message.message}
                                        </td>
                                        <td style={{ padding: '0.75rem 1rem', textAlign: 'center' }}>
                                            {getStatusBadge(message.status)}
                                        </td>
                                        <td style={{ padding: '0.75rem 1rem', fontSize: '0.875rem', color: '#1f2937', whiteSpace: 'nowrap' }}>
                                            {formatDate(message.createdAt)}
                                        </td>
                                        <td style={{ padding: '0.75rem 1rem', textAlign: 'center' }}>
                                            <div style={{ display: 'flex', gap: '0.5rem', justifyContent: 'center', flexWrap: 'wrap' }}>
                                                {message.status === 'unread' && (
                                                    <button
                                                        onClick={() => handleStatusChange(message._id, 'read')}
                                                        title="Mark as Read"
                                                        style={{
                                                            padding: '0.4rem 0.6rem',
                                                            background: '#f59e0b',
                                                            color: 'white',
                                                            border: 'none',
                                                            borderRadius: '4px',
                                                            cursor: 'pointer'
                                                        }}
                                                    >
                                                        <FiEye size={12} />
                                                    </button>
                                                )}
                                                {message.status !== 'replied' && (
                                                    <button
                                                        onClick={() => handleStatusChange(message._id, 'replied')}
                                                        title="Mark as Replied"
                                                        style={{
                                                            padding: '0.4rem 0.6rem',
                                                            background: '#10b981',
                                                            color: 'white',
                                                            border: 'none',
                                                            borderRadius: '4px',
                                                            cursor: 'pointer'
                                                        }}
                                                    >
                                                        <FiCheckCircle size={12} />
                                                    </button>
                                                )}
                                                <button
                                                    onClick={() => handleDelete(message._id)}
                                                    title="Delete"
                                                    style={{
                                                        padding: '0.4rem 0.6rem',
                                                        background: '#ef4444',
                                                        color: 'white',
                                                        border: 'none',
                                                        borderRadius: '4px',
                                                        cursor: 'pointer'
                                                    }}
                                                >
                                                    <FiTrash2 size={12} />
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                ))}
                            </tbody>
                        </table>
                    </div>
                )}
            </div>
        </div>
    );
};

export default ContactMessages;
