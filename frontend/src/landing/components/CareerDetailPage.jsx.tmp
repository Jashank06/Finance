import { useState, useEffect } from 'react';
import { useParams, Link } from 'react-router-dom';
import axios from 'axios';
import { FiMapPin, FiBriefcase, FiClock, FiTrendingUp, FiArrowLeft, FiCheck, FiMail, FiExternalLink, FiCalendar, FiDollarSign } from 'react-icons/fi';
import './CareerDetailPage.css';

const API_URL = import.meta.env.VITE_API_URL || import.meta.env.VITE_API_URL || '/api';

const CareerDetailPage = () => {
    const { slug } = useParams();
    const [career, setCareer] = useState(null);
    const [loading, setLoading] = useState(true);

    useEffect(() => {
        fetchCareer();
    }, [slug]);

    const fetchCareer = async () => {
        try {
            const response = await axios.get(`${API_URL}/careers/public/${slug}`);
            setCareer(response.data);
            setLoading(false);
        } catch (error) {
            console.error('Error fetching career:', error);
            setLoading(false);
        }
    };

    const formatSalary = (salaryRange) => {
        if (!salaryRange || (!salaryRange.min && !salaryRange.max)) return 'Competitive';
        if (salaryRange.min && salaryRange.max) {
            return `₹${(salaryRange.min / 100000).toFixed(1)}L - ₹${(salaryRange.max / 100000).toFixed(1)}L per year`;
        }
        if (salaryRange.min) return `₹${(salaryRange.min / 100000).toFixed(1)}L+ per year`;
        return 'Competitive';
    };

    const formatDate = (dateString) => {
        return new Date(dateString).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        });
    };

    if (loading) {
        return (
            <div style={{ minHeight: '100vh', display: 'flex', alignItems: 'center', justifyContent: 'center' }}>
                <p style={{ fontSize: '1.2rem', color: '#6b7280' }}>Loading job details...</p>
            </div>
        );
    }

    if (!career) {
        return (
            <div style={{ minHeight: '100vh', display: 'flex', alignItems: 'center', justifyContent: 'center', flexDirection: 'column', gap: '1rem' }}>
                <p style={{ fontSize: '1.5rem', color: '#6b7280' }}>Job opening not found</p>
                <Link to="/landing/careers" style={{ color: '#9ca3af', textDecoration: 'none', display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
                    <FiArrowLeft /> Back to Careers
                </Link>
            </div>
        );
    }

    return (
        <div style={{ minHeight: '100vh', background: '#f9fafb' }}>
            {/* Header */}
            <div style={{
                background: 'linear-gradient(135deg, #1f2937 0%, #111827 100%)',
                color: 'white',
                padding: '8rem 2rem 3rem',
                borderBottom: '1px solid rgba(255, 255, 255, 0.1)'
            }}>
                <div style={{ maxWidth: '900px', margin: '0 auto' }}>
                    <Link
                        to="/landing/careers"
                        style={{
                            color: 'white',
                            textDecoration: 'none',
                            display: 'inline-flex',
                            alignItems: 'center',
                            gap: '0.5rem',
                            marginBottom: '2rem',
                            opacity: 0.9
                        }}
                    >
                        <FiArrowLeft /> Back to Careers
                    </Link>
                    <div style={{ marginTop: '2rem' }}>
                        <h1 style={{ fontSize: '2.5rem', marginBottom: '1rem', fontWeight: 'bold' }}>
                            {career.title}
                        </h1>
                        <div style={{ display: 'flex', gap: '2rem', flexWrap: 'wrap', fontSize: '0.95rem', opacity: 0.9 }}>
                            <div style={{ display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
                                <FiBriefcase />
                                <span>{career.department}</span>
                            </div>
                            <div style={{ display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
                                <FiMapPin />
                                <span>{career.location}</span>
                            </div>
                            <div style={{ display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
                                <FiClock />
                                <span>{career.jobType}</span>
                            </div>
                            <div style={{ display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
                                <FiTrendingUp />
                                <span>{career.experienceLevel}</span>
                            </div>
                            <div style={{ display: 'flex', alignItems: 'center', gap: '0.5rem' }}>
                                <FiDollarSign />
                                <span>{formatSalary(career.salaryRange)}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {/* Content */}
            <div style={{ maxWidth: '900px', margin: '0 auto', padding: '3rem 2rem' }}>
                {/* Apply Section */}
                <div style={{
                    background: 'white',
                    padding: '2rem',
                    borderRadius: '12px',
                    boxShadow: '0 2px 8px rgba(0,0,0,0.1)',
                    marginBottom: '2rem',
                    display: 'flex',
                    justifyContent: 'space-between',
                    alignItems: 'center'
                }}>
                    <div>
                        <h3 style={{ margin: '0 0 0.5rem 0', fontSize: '1.25rem' }}>
                            Interested in this position?
                        </h3>
                        {career.applicationDeadline && (
                            <div style={{ display: 'flex', alignItems: 'center', gap: '0.5rem', color: '#6b7280', fontSize: '0.875rem' }}>
                                <FiCalendar size={14} />
                                <span>Apply before {formatDate(career.applicationDeadline)}</span>
                            </div>
                        )}
                    </div>
                    <div style={{ display: 'flex', gap: '1rem' }}>
                        <a
                            href="https://shivengroup.com/register"
                            target="_blank"
                            rel="noopener noreferrer"
                            style={{
                                display: 'flex',
                                alignItems: 'center',
                                gap: '0.5rem',
                                padding: '0.75rem 1.5rem',
                                background: 'linear-gradient(135deg, #374151 0%, #1f2937 100%)',
                                color: 'white',
                                textDecoration: 'none',
                                borderRadius: '8px',
                                fontWeight: '500',
                                border: '1px solid rgba(255, 255, 255, 0.1)'
                            }}
                        >
                            <FiExternalLink />
                            Apply Now
                        </a>
                    </div>
                </div>

                {/* Job Description */}
                <article style={{
                    background: 'white',
                    padding: '3rem',
                    borderRadius: '12px',
                    boxShadow: '0 2px 8px rgba(0,0,0,0.1)',
                    marginBottom: '2rem'
                }}>
                    <h3 style={{ fontSize: '1.5rem', color: '#1f2937', marginBottom: '1rem' }}>
                        Job Description
                    </h3>
                    <div style={{
                        fontSize: '1.125rem',
                        lineHeight: '1.8',
                        color: '#374151',
                        whiteSpace: 'pre-wrap',
                        marginBottom: '2rem'
                    }}>
                        {career.description}
                    </div>

                    {career.responsibilities && career.responsibilities.length > 0 && (
                        <>
                            <h3 style={{ fontSize: '1.5rem', color: '#1f2937', marginBottom: '1rem', marginTop: '2rem' }}>
                                Key Responsibilities
                            </h3>
                            <ul style={{ listStyle: 'none', padding: 0 }}>
                                {career.responsibilities.map((responsibility, idx) => (
                                    <li key={idx} style={{
                                        display: 'flex',
                                        gap: '0.75rem',
                                        marginBottom: '0.75rem',
                                        fontSize: '1.125rem',
                                        lineHeight: '1.6'
                                    }}>
                                        <FiCheck color="#6b7280" size={20} style={{ flexShrink: 0, marginTop: '0.25rem' }} />
                                        <span>{responsibility}</span>
                                    </li>
                                ))}
                            </ul>
                        </>
                    )}

                    {career.requirements && career.requirements.length > 0 && (
                        <>
                            <h3 style={{ fontSize: '1.5rem', color: '#1f2937', marginBottom: '1rem', marginTop: '2rem' }}>
                                Requirements
                            </h3>
                            <ul style={{ listStyle: 'none', padding: 0 }}>
                                {career.requirements.map((requirement, idx) => (
                                    <li key={idx} style={{
                                        display: 'flex',
                                        gap: '0.75rem',
                                        marginBottom: '0.75rem',
                                        fontSize: '1.125rem',
                                        lineHeight: '1.6'
                                    }}>
                                        <FiCheck color="#6b7280" size={20} style={{ flexShrink: 0, marginTop: '0.25rem' }} />
                                        <span>{requirement}</span>
                                    </li>
                                ))}
                            </ul>
                        </>
                    )}

                    {career.benefits && career.benefits.length > 0 && (
                        <>
                            <h3 style={{ fontSize: '1.5rem', color: '#1f2937', marginBottom: '1rem', marginTop: '2rem' }}>
                                Benefits & Perks
                            </h3>
                            <ul style={{ listStyle: 'none', padding: 0 }}>
                                {career.benefits.map((benefit, idx) => (
                                    <li key={idx} style={{
                                        display: 'flex',
                                        gap: '0.75rem',
                                        marginBottom: '0.75rem',
                                        fontSize: '1.125rem',
                                        lineHeight: '1.6'
                                    }}>
                                        <FiCheck color="#6b7280" size={20} style={{ flexShrink: 0, marginTop: '0.25rem' }} />
                                        <span>{benefit}</span>
                                    </li>
                                ))}
                            </ul>
                        </>
                    )}

                    {career.skills && career.skills.length > 0 && (
                        <>
                            <h3 style={{ fontSize: '1.5rem', color: '#1f2937', marginBottom: '1rem', marginTop: '2rem' }}>
                                Required Skills
                            </h3>
                            <div style={{ display: 'flex', gap: '0.75rem', flexWrap: 'wrap' }}>
                                {career.skills.map((skill, idx) => (
                                    <span
                                        key={idx}
                                        style={{
                                            padding: '0.5rem 1rem',
                                            background: 'rgba(255, 255, 255, 0.08)',
                                            color: '#e5e7eb',
                                            borderRadius: '20px',
                                            fontSize: '0.875rem',
                                            fontWeight: '500',
                                            border: '1px solid rgba(255, 255, 255, 0.15)'
                                        }}
                                    >
                                        {skill}
                                    </span>
                                ))}
                            </div>
                        </>
                    )}
                </article>

                {/* Back Button */}
                <div style={{ textAlign: 'center', marginTop: '3rem' }}>
                    <Link
                        to="/landing/careers"
                        style={{
                            display: 'inline-flex',
                            alignItems: 'center',
                            gap: '0.5rem',
                            padding: '1rem 2rem',
                            background: 'linear-gradient(135deg, #374151 0%, #1f2937 100%)',
                            color: 'white',
                            textDecoration: 'none',
                            borderRadius: '8px',
                            fontSize: '1rem',
                            fontWeight: '500',
                            border: '1px solid rgba(255, 255, 255, 0.1)'
                        }}
                    >
                        <FiArrowLeft /> Back to All Careers
                    </Link>
                </div>
            </div>
        </div>
    );
};

export default CareerDetailPage;
